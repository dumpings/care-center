<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.csu.carecenter.Persistence.UserMapper">
    <select id="getUserByUserIdAndPassword" parameterType="User" resultType="User">
        SELECT
            USER.USERID as userId,
            USER.USERNAME,
            USER.SEX,
            USER.EMAIL,
            USER.AGE,
            USER.PHONENUMBER as phoneNumber,
            USER.ROLE
        FROM USER, SIGNON
        WHERE SIGNON.USERID = #{userId}
          AND SIGNON.PASSWORD = #{password}
          AND USER.USERID = SIGNON.USERID
    </select>

    <insert id="insertUser" parameterType="User">
        INSERT INTO USER
        (USERNAME,SEX,EMAIL,AGE,PHONENUMBER,ROLE)
        VALUES
        (#{username},#{sex},#{email},#{age},#{phoneNumber},#{role})
    </insert>

    <insert id="insertSignon" parameterType="User">
        INSERT INTO SIGNON
        (USERID,PASSWORD)
        VALUES
        (#{userId},#{password})
    </insert>

    <select id="getMaxUserId" resultType="int">
        SELECT
            Max(USER.USERID)
        FROM USER
    </select>

</mapper>